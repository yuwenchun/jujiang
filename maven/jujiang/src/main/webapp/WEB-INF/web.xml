	id="WebApp_ID" version="2.5">
	<display-name>jujiang</display-name>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/classes/spring-configs/*/*-beans.xml</param-value>
	</context-param>
	<session-config>
		<session-timeout>1000</session-timeout>
	</session-config>

